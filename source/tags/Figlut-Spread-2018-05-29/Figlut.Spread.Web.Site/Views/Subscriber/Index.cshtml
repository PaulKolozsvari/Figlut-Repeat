@model Figlut.Spread.Web.Site.Models.FilterModel<SubscriberModel>

@using Figlut.Server.Toolkit.Data;
@using Figlut.Spread.Web.Site.Configuration;
@using Figlut.Spread.Web.Site;
@using Figlut.Spread.Web.Site.Models;

@{
    ViewBag.Title = "Subscribers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav>
    <ul id="menu">
        <li>
            <img src="~/Images/Icons/red-home-icon32.png" style="float:right; margin-right:1%; margin-left:1%"/>
            <a href="" style="float:right">Subscribers</a>
        </li>
    </ul>
</nav>
<hr />
@using (Ajax.BeginForm("Index", "Subscriber", new AjaxOptions{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "gridPartial",
    HttpMethod = "POST"},
    new { @id = "frmDetails" } ))
{
    <div id="gridPartial">
        @{
            Html.RenderPartial("_SubscriberGrid", Model);
        }
    </div>
}

<script type="text/javascript">
    var sendEnabled = false;

    $(document).ready(function () {
        $(document).keypress(function (event) {
            if (event.which == 13) {
                //$("#btnSearch").click();
                postSubscribers();
                return false; //Cancel the default form's post behaviour when enter key is pressed i.e. if this is not set (or set to true) then the form will be posted twice when pressing the enter key.
            }
        });
        loadDialog("#divConfirmationDialog", "#dlgConfirmation", "ConfirmDeleteDialog", "Subscriber", 'identifier', '@Guid.Empty');
        loadDialog("#divCreateSubscriber", "#dlgCreateSubscriber", "CreateDialog", "Subscriber", '', '@null');
        loadDialog("#divSendSubscriberSmsDialog", "#dlgSendSubscriberSmsDialog", "SendSms", "Subscriber", '', '@null');
        loadDialog("#divEditSubscriber", "#dlgEditSubscriber", "EditDialog", "Subscriber", 'subscriberId', '@null');

        loadDialog("#divWaitDialog", "#dlgWait", "WaitDialog", "SmsSent", 'message', '@string.Empty');
        loadDialog("#divInformationDialog", "#dlgInformation", "InformationDialog", "SmsSent", 'message', '@string.Empty');
        sendEnabled = true;
    });
</script>