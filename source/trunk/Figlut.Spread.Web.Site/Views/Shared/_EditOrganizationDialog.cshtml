@model Figlut.Spread.Web.Site.Models.OrganizationModel

<div id="dlgEditOrganization">
    <img src="~/Images/Icons/red-edit32.png" style="float:right; margin-right:1%; margin-left:1%"/>
    <div class="centerForm">
        <form id="EditOrganizationForm">
