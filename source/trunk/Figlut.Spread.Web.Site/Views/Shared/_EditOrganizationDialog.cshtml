                <legend>Confirmation Form</legend>
                @Html.HiddenFor(m => m.OrganizationId)
                @Html.HiddenFor(m => m.OrganizationSubscriptionTypeId)
                @Html.HiddenFor(m => m.AccountManagerUserName)
                @Html.HiddenFor(m => m.DateCreated)
