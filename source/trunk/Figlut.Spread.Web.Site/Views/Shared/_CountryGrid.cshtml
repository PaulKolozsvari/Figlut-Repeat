@model Figlut.Spread.Web.Site.Models.FilterModel<CountryModel>

@using Figlut.Server.Toolkit.Data;
@using Figlut.Spread.Web.Site.Configuration;
@using Figlut.Spread.Web.Site;
@using Figlut.Spread.Web.Site.Models;
@using Figlut.Spread.Web.Site.Extensions;
@using Figlut.Spread.ORM.Helpers;

@{
    Figlut.Spread.Web.Site.Models.CountryModel country = new CountryModel();

}
@{
    int countriesPerPageToDisplay = Convert.ToInt32(SpreadWebApp.Instance.GlobalSettings[GlobalSettingName.CountriesPerPagePageToDisplay].SettingValue);
    var grid = new WebGrid(Model.DataModel, canPage: true, rowsPerPage: countriesPerPageToDisplay, selectionFieldName: "selectedRow", ajaxUpdateContainerId: "gridContent");
    grid.Pager(WebGridPagerModes.All);
}

<div id="gridContent" class="data-grid">
    <div id="gridWrapper">
        <div class="centerInformation" style="float:inherit; margin-top:1%; margin-bottom:1%;">
            <div class="grid-search">
                <table style="width:100%;">
                    <tr>
                        <td style="width:60%;">
                            <div class="search-text">
                                @Html.Raw("Search Text")
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.EditorFor(m => m.SearchText)
                        </td>
                    </tr>
                </table>
            </div>
            <div class="grid-buttons">
                <div style="float: left; margin-left:2%; margin-right:2%">
                    @Html.LinkButtonForSubmit("Search", "onSearchCountrysClick()", "btnSearch", "search.png")
                    @if (string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        @Html.LinkButtonForSubmit("Download", "onDownloadAllCountriesCsvFileClick()", "btnDownload", "spreadsheet.png")
                        if (grid.HasSelection && (grid.SelectedIndex < grid.Rows.Count))
                        {
                            country = (CountryModel)grid.Rows[grid.SelectedIndex].Value;
                            @Html.LinkButtonForSubmit("Public Holidays", "onViewCountryPublicHolidaysClick()", "btnViewCountryPublicHolidays", "red-calendar-icon32.png")
                        }
                    }
                </div>
                <div style="float: right; margin-left:2%; margin-right:2%">
                    @if (string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        if (Model.IsAdministrator)
                        {
                            @Html.LinkButtonForSubmit("Create", "onCreateCountryClick()", "btnCreateCountry", "red-document-plus-icon32.png")
                            @Html.LinkButtonForCancel("Delete All", "onDeleteAllCountrysClick()", "btnDeleteAllCountrys")
                            if (grid.HasSelection && (grid.SelectedIndex < grid.Rows.Count))
                            {
                                country = (CountryModel)grid.Rows[grid.SelectedIndex].Value;
                                @Html.LinkButtonForCancel("Delete", "onDeleteCountryClick()", "btnDeleteCountry")
                                @Html.LinkButtonForSubmit("Edit", "onEditCountryClick()", "btnEditCountry", "red-edit.png")
                            }
                        }
                    }
                </div>
            </div>
        </div>
        <div class="country-preview">
            @if (Model.IsAdministrator && grid.HasSelection && (grid.SelectedIndex < grid.Rows.Count))
            {
                country = (CountryModel)grid.Rows[grid.SelectedIndex].Value;
                <div style="float:left; margin-left:2%; margin-right:2%;">
                    <b>@Html.Raw(string.Format("ID: {0}", country.CountryId.ToString()))</b>
                </div>
            }
            <div style="float: right; margin-left:2%; margin-right:2%">
                <b>@Html.Raw(string.Format("Countrys Loaded: {0} of {1}", Model.TotalCount.ToString(), Model.TotalTableCount.ToString()))</b>
            </div>
        </div>
        <div id="gridTableContainer">
            @grid.GetHtml(
                tableStyle: "webGrid",
                headerStyle: "header",
                alternatingRowStyle: "alt",
                selectedRowStyle: "select",
                columns: grid.Columns(
                grid.Column("Countries", format: (item) => item.GetSelectLink("*"), style: "select-column-style"),
                grid.Column(EntityReader<CountryModel>.GetPropertyName(p => p.CountryCode, false), "Country Code"),
                grid.Column(EntityReader<CountryModel>.GetPropertyName(p => p.CountryName, false), "Country Name"),
                grid.Column(EntityReader<CountryModel>.GetPropertyName(p => p.DateCreated, false), "Date Created")
            ))
        </div>
        <div class="country-preview">
            @if (grid.HasSelection && (grid.SelectedIndex < grid.Rows.Count))
            {
                country = (CountryModel)grid.Rows[grid.SelectedIndex].Value;
                <div style="float: left; margin-left:2%; margin-right:2%">
                    <b>@Html.Raw(string.Format("Name: {0}", country.CountryCode))</b>
                </div>
                <div style="float:right; margin-left:2%; margin-right:2%; color: #a30e0e;">
                    @Html.Raw(string.Format("{0}", country.CountryCode))
                </div>
            }
        </div>
    </div>
    <div id="CountriesErrorField" style="color:#8A0808">
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
            <br />
            @Html.Raw(ViewBag.ErrorMessage)
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        $("#SearchText").focus();
        makeGridRowsPostForm();
        enableDatepickers();
    });

    function onSearchCountrysClick() {
        postCountries();
    }

    function onDeleteCountryClick() {
        showDialog(
            '#divConfirmationDialog',
            '#dlgConfirmation',
            'ConfirmDeleteDialog',
            'Country',
            'identifier',
            '@country.CountryId.ToString()');
    };

    function onEditCountryClick() {
        showDialog(
            '#divEditCountry',
            '#dlgEditCountry',
            'EditDialog',
            'Country',
            'countryId',
            '@country.CountryId.ToString()');
    };

    function onCreateCountryClick() {
        showDialog(
            '#divCreateCountry',
            '#dlgCreateCountry',
            'CreateDialog',
            'Country',
            'countryId',
            '');
    };

    function getSearchParametersString() {
        var searchParameters = '@string.Format("{0}|{1}|{2}",
        Model.SearchText != null ? Model.SearchText : string.Empty,
        Model.StartDate.HasValue ? Model.StartDate.Value.Date.ToString() : string.Empty,
        Model.EndDate.HasValue ? Model.EndDate.Value.Date.ToString() : string.Empty)'
        return searchParameters;
    }

    function onDeleteAllCountrysClick() {
        var searchParameters = getSearchParametersString();
        showDialog(
            '#divConfirmationDialog',
            '#dlgConfirmation',
            'ConfirmDeleteAllDialog',
            'Country',
            'searchParametersString',
            searchParameters);
    }

    function onDownloadAllCountriesCsvFileClick() {
        var searchParameters = getSearchParametersString();
        var downloadUrl = '@Url.Action("DownloadCsvFile", "Country", new { searchParametersString = "_searchValue" })';
        downloadUrl = downloadUrl.replace('_searchValue', searchParameters);
        window.location = downloadUrl;
    }

    function onViewCountryPublicHolidaysClick() {
        var selectedCountryId = '@country.CountryId';
        var downloadUrl = '@Url.Action("Index", "PublicHoliday", new { countryId = "_countryId" })';
        downloadUrl = downloadUrl.replace('_countryId', selectedCountryId);
        window.location = downloadUrl;
    }

    function postCountries() {
        $('form#frmDetails').trigger('submit');
    };

</script>