@model Figlut.Spread.Web.Site.Models.FilterModel<RepeatScheduleEntryModel>

@using Figlut.Server.Toolkit.Data;
@using Figlut.Spread.Web.Site.Configuration;
@using Figlut.Spread.Web.Site;
@using Figlut.Spread.Web.Site.Models;

@{
    ViewBag.Title = "Repeat Schedule Entries";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav>
    <ul id="menu">
        <li>
            <img src="~/Images/Icons/red-balloon-plus-icon32.png" style="float:right; margin-right:1%; margin-left:1%" />
            <a href="" style="float:right">@Html.Raw(string.Format("Repeat Schedule Entries: {0}", Model.ParentCaption))</a>
        </li>
    </ul>
</nav>
<hr />
@using (Ajax.BeginForm("Index", "RepeatScheduleEntry", new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "gridPartial",
    HttpMethod = "POST"
},
new { @id = "frmDetails" }))
{
    <div id="gridPartial">
        @{
            Html.RenderPartial("_RepeatScheduleEntryGrid", Model);
        }
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $(document).keypress(function (event) {
            if (event.which == 13) {
                //$("#btnSearch").click();
                postRepeatScheduleEntries();
                return false; //Cancel the default form's post behaviour when enter key is pressed i.e. if this is not set (or set to true) then the form will be posted twice when pressing the enter key.
            }
        });
        loadDialog("#divConfirmationDialog", "#dlgConfirmation", "ConfirmDeleteDialog", "RepeatScheduleEntry", 'identifier', '@Guid.Empty');
        loadDialog("#divCreateRepeatScheduleEntry", "#dlgCreateRepeatScheduleEntry", "CreateDialog", "RepeatScheduleEntry", 'repeatScheduleId', '@Model.ParentId');
        loadDialog("#divEditRepeatScheduleEntry", "#dlgEditRepeatScheduleEntry", "EditDialog", "RepeatScheduleEntry", 'repeatScheduleEntryId', '@null');
    });
</script>