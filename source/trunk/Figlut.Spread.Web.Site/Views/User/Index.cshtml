@model Figlut.Spread.Web.Site.Models.FilterModel<UserModel>

@using Figlut.Server.Toolkit.Data;
@using Figlut.Spread.Web.Site.Configuration;
@using Figlut.Spread.Web.Site;
@using Figlut.Spread.Web.Site.Models;

@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<nav>
    <ul id="menu">
        <li>
            <img src="~/Images/Icons/red-user-icon32.png" style="float:right; margin-right:1%; margin-left:1%"/>
            @if (!string.IsNullOrEmpty(Model.ParentCaption))
            {
                <a href="" style="float:right">@Html.Raw(string.Format("Organization Users: {0}", Model.ParentCaption))</a>
            }
            else
            {
                <a href="" style="float:right">Users</a>
            }
        </li>
    </ul>
</nav>
<hr />
@using (Ajax.BeginForm("Index", "User", new AjaxOptions {
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "gridPartial",
    HttpMethod = "POST"},
    new { @id = "frmDetails" } ))
{
    <div id="gridPartial">
        @{
            Html.RenderPartial("_UserGrid", Model);
        }
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $(document).keypress(function (event) {
            if (event.which == 13) {
                //$("#btnSearch").click();
                postUsers();
                return false; //Cancel the default form's post behaviour when enter key is pressed i.e. if this is not set (or set to true) then the form will be posted twice when pressing the enter key.
            }
        });
        @*loadDialog("#divConfirmationDialog", "#dlgConfirmation", "ConfirmDeleteDialog", "SmsSent", 'identifier', '@smsSent.SmsSentLogId.ToString()');*@
        loadDialog("#divConfirmationDialog", "#dlgConfirmation", "ConfirmDeleteDialog", "User", 'identifier', '@Guid.Empty');
        loadDialog("#divEditUser", "#dlgEditUser", "EditDialog", "User", 'userId', '@null');
        loadDialog("#divEditUserPassword", "#dlgEditUserPassword", "EditUserPasswordDialog", "User", 'userId', '@null');
    });
</script>