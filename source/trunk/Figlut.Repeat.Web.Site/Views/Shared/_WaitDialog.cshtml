@model Figlut.Repeat.Web.Site.Models.WaitModel

<div id="dlgWait">
    <div class="centerForm">
        <form id="WaitForm">
            @Html.ValidationSummary(true, "Failed to load wait dialog.")
            <fieldset>
                <legend>Confirmation Form</legend>
                @Html.HiddenFor(m => m.Identifier)
                <img class="centerWaitCursor" src="~/Images/GIFS/spinner.gif" />
                <br />
                <br />
                <br />
                <div class="field-label" id="wait-message" style="font-size:.8em">
                    <div class="multiline">
                        @Html.Raw(Model.WaitMessage)
                    </div>
                    <br />
                    <br />
                </div>
                <br />
                <br />
                <div id="WaitErrorField" style="color:#8A0808"></div>
            </fieldset>
        </form>
    </div>
</div>

<script type="text/javascript">
