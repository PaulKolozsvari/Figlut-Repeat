@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="bg hidden-sm"></div>
    <div class="row">
        <div class="col-md-12 text-center">
            <h2>ASP.NET MVC 5 Purchase Samples</h2>
            <br />
            <p>
                Pick one of the three available items below to make a purchase
                <br />
                (The "Server Source Code" links will open the code for the option from the current source code)
            </p>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Recurring Billing</h3>
                </div>

                <div class="panel-body">
                    <p><h5>Only R20 pm</h5></p>
                    <p>This is for recurring billing</p>
                </div>
                <div class="text-right">
                    @Html.ActionLink("Buy Now", "Recurring", "Home", new { area = "" }, new { @class = "btn btn-block btn-success" })
                    <a target="_blank" href="https://github.com/louislewis2/payfast/blob/master/samples/PayFast.Web.Net/Controllers/HomeController.cs#L44-L78" class="btn btn-block btn-info">Server Source Code</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Once-Off Payment</h3>
                </div>

                <div class="panel-body">
                    <p><h5>Only R30 once off</h5></p>
                    <p>This is a once off payment</p>
                </div>
                <div class="text-right">
                    @Html.ActionLink("Buy Now", "OnceOff", "Home", new { area = "" }, new { @class = "btn btn-block btn-success" })
                    <a target="_blank" href="https://github.com/louislewis2/payfast/blob/master/samples/PayFast.Web.Net/Controllers/HomeController.cs#L80-L107" class="btn btn-block btn-info">Server Source Code</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">AdHoc Agreement</h3>
                </div>

                <div class="panel-body">
                    <p><h5>Only R70 once off with adhoc</h5></p>
                    <p>This is an adhoc agreement</p>
                </div>
                <div class="text-right">
                    @Html.ActionLink("Buy Now", "AdHoc", "Home", new { area = "" }, new { @class = "btn btn-block btn-success" })
                    <a target="_blank" href="https://github.com/louislewis2/payfast/blob/master/samples/PayFast.Web.Net/Controllers/HomeController.cs#L109-L139" class="btn btn-block btn-info">Server Source Code</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4 col-md-offset-4 text-center">
            <h2>Postback (ITN) Handling</h2>
            <br />
            <p>
                View sample code for handling the postback (ITN)
                <br />
            </p>
            <br />
            <a target="_blank" href="https://github.com/louislewis2/payfast/blob/master/samples/PayFast.Web.Net/Controllers/HomeController.cs#L151-L179" class="btn btn-block btn-info">Server Source Code</a>
        </div>
    </div>
</div>